{
    "manifest_version": 3,
    "name": "ShadowAI - Gemini Assistant",
    "version": "1.0.0",
    "description": "Tu asistente de IA con Gemini 2.0 - Usa tu propia API Key",
    "permissions": [
        "sidePanel",
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "<all_urls>"
    ],
    "action": {
        "default_title": "Abrir PartnerAI"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ]
}